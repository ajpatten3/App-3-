<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="com.example.android.myapplication.MainActivity"
    android:clickable="true"
    android:backgroundTint="#c7c7c7">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rsz_revq1egd"
        android:clickable="true"
        android:baselineAlignBottom="false"
        android:cropToPadding="false"
        tools:ignore="ContentDescription"
        android:id="@+id/imageView"
        android:layout_marginBottom="10sp" />


    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:text="Chevrolet Company"
        android:textSize="35sp"
        android:fontFamily="sans-serif-light"
        android:autoText="false"
        android:elegantTextHeight="true"
        android:editable="true"
        android:layout_below="@+id/imageView"
        android:inputType="none"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10sp"
        android:layout_marginBottom="20sp"
        android:layout_alignParentRight="false"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="5sp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:text="American automobile division"
        android:textSize="20sp"
        android:textStyle="normal"
        android:phoneNumber="false"
        android:textIsSelectable="false"
        android:layout_below="@+id/editText"
        android:layout_marginLeft="10sp"
        android:layout_marginBottom="20sp"
        android:layout_marginRight="5sp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:id="@+id/editText4"
        android:text="300 Renaissance Center, Detroit, MI "
        android:textSize="20sp"
        android:layout_below="@+id/editText2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10sp"
        android:layout_marginBottom="20sp"
        android:layout_marginRight="5sp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/editText5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="111-222-3333"
        android:layout_marginLeft="10sp"
        android:layout_marginBottom="15sp"
        android:layout_below="@+id/editText4"
        android:layout_marginRight="5sp" />


</RelativeLayout>
